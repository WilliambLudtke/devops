SELECT 
    h.host, 
    i.name, 
    i.key_, 
    i.delay 
FROM 
    items i 
JOIN 
    hosts h ON i.hostid = h.hostid 
WHERE 
    CAST(i.delay AS UNSIGNED) = 30;


